        <![endif]-->
        <h1>TODO</h1>
    <ul class="todos">
        <% for(let i=0; i < info.length; i++) {%>
            <li class="todo">
                <span class='id'><%= info[i]._id %></span>
                <% if (info[i].done) { %>
                <span class='done done-<%=info[i].done%> fas fa-check-square'></span>
                <% } else { %>
                <span class='done done-<%=info[i].done%> fas fa-square'></span>
                <% } %>
                <span class='description'><%= info[i].description %></span>
                <span class='priority'><%= info[i].priority %></span>
                <span class='priorityup fas fa-thumbs-up'></span>
                <span class='prioritydown fas fa-thumbs-down'></span>
                <span class='delete fas fa-trash'></span>
            </li>
            <% } %>
    </ul>
    
    <h2>Add A TODO:</h2>
    
    <form action="/addTodo" method="POST">
        <input type="text" placeholder="Description" name="description" autofocus="autofocus">
        <input type="number" placeholder="Priority" name="priority" value="3">
        <input type="submit">
    </form>

        <script src="js/main.js" async defer></script>
    </body>
</html>